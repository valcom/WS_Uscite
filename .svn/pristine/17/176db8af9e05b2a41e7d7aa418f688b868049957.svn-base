<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation=
	"http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
     
     
    	<!-- CCSE -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl" >
		<property name="host" value="192.168.0.101" />
		<property name="port" value="25" />
		<property name="protocol" value="smtp" />
		<property name="username" value="anagrafeccse@ccse.cc" />
		<property name="password" value="anaccse" />
	</bean>
<!-- messaggio sblocco pratiche Template -->
	<bean id="msgSbloccoPratiche" class="org.springframework.mail.SimpleMailMessage" scope="prototype">
		<property name="from" value="dbusciteservice@ccse.cc" />
		<property name="to" ref="to" />
		<property name="cc" ref="cc" />
		<property name="bcc" ref="bcc" />
		<property name="subject" ref="subject" />
		<property name="replyTo" ref="replyTo" />
		<property name="text">
			<value><![CDATA[
La Pratica di Erogazione Istituzionale Codice Pratica %s,

per il beneficiario %s

avente importo di %s

associata alla nota numero %s

del comitato del %s

e' provvista di tutte le autorizzazioni ed e' pronta all' erogazione.

		]]></value>
		</property>
	</bean>
	
	
<!-- messaggio autorizzazione pratiche Template -->
	<bean id="msgAutorizzazioneComitato" class="org.springframework.mail.SimpleMailMessage" scope="prototype">
		<property name="from" value="dbusciteservice@ccse.cc" />
		<property name="to" ref="to" />
		<property name="cc" ref="cc" />
		<property name="bcc" ref="bcc" />
		<property name="subject" value="Autorizzazione Comitato Concessa" />
		<property name="replyTo" ref="replyTo" />
		<property name="text">
			<value><![CDATA[
La Pratica di Erogazione Istituzionale Codice Pratica %s,

per il beneficiario %s

avente importo di %s

associata alla nota numero %s

del comitato del %s

e' stata autorizzata dal CdG ed e' pronta per essere lavorata.

		]]></value>
		</property>
	</bean>	
	
</beans>